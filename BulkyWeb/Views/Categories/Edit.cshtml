@model BulkyWeb.Models.Category

@{
    ViewData["Title"] = "Edit";
}

<div class="container mt-5">
    <h1 class="display-4 animate__animated animate__fadeIn">Edit Category</h1>

    <div class="card animate__animated animate__fadeInUp">
        <div class="card-body">
            <h4 class="card-title">Category Form</h4>
            <hr />
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <div class="mb-3">
                    <label asp-for="Name" class="form-label"><i class="bi bi-tag"></i> Category Name</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="DisplayOrder" class="form-label"><i class="bi bi-sort-numeric-up"></i> Display Order</label>
                    <input asp-for="DisplayOrder" class="form-control" />
                    <span asp-validation-for="DisplayOrder" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="CreatedDateTime" class="form-label"><i class="bi bi-calendar-plus"></i> Created Date</label>
                    <input asp-for="CreatedDateTime" class="form-control" />
                    <span asp-validation-for="CreatedDateTime" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary animate__animated animate__fadeInUp"><i class="bi bi-save"></i> Save</button>
            </form>
        </div>
    </div>

    <div class="mt-3">
        <a asp-action="Index" class="btn btn-secondary animate__animated animate__fadeInUp"><i class="bi bi-arrow-left"></i> Back to List</a>
    </div>
</div>
