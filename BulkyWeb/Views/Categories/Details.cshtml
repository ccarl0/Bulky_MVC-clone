@model BulkyWeb.Models.Category

@{
    ViewData["Title"] = "Details";
}

<div class="container mt-5">
    <h1 class="display-4 animate__animated animate__fadeIn">Category Details</h1>

    <div class="card animate__animated animate__fadeInUp">
        <div class="card-body">
            <h4 class="card-title">Category Information</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">Name</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.Name)</dd>
                <dt class="col-sm-2">Display Order</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.DisplayOrder)</dd>
                <dt class="col-sm-2">Created Date</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.CreatedDateTime)</dd>
            </dl>
        </div>
    </div>

    <div class="mt-3">
        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary animate__animated animate__slideInLeft"><i class="bi bi-pencil"></i> Edit</a>
        <a asp-action="Index" class="btn btn-secondary animate__animated animate__slideInRight"><i class="bi bi-arrow-left"></i> Back to List</a>
    </div>
</div>
