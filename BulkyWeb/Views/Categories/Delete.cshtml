@model BulkyWeb.Models.Category

@{
    ViewData["Title"] = "Delete";
}

<div class="container mt-5">
    <h1 class="display-4 animate__animated animate__fadeIn">Delete Category</h1>

    <div class="alert alert-danger animate__animated animate__fadeInUp" role="alert">
        <h4 class="alert-heading">Are you sure you want to delete this?</h4>
    </div>

    <div class="card animate__animated animate__fadeInUp">
        <div class="card-body">
            <h4 class="card-title">Category Details</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">Name</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.Name)</dd>
                <dt class="col-sm-2">Display Order</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.DisplayOrder)</dd>
                <dt class="col-sm-2">Created Date</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.CreatedDateTime)</dd>
            </dl>
        </div>
    </div>

    <form asp-action="Delete" class="mt-3 animate__animated animate__fadeInUp">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger"><i class="bi bi-trash"></i> Delete</button>
        <a asp-action="Index" class="btn btn-secondary"><i class="bi bi-arrow-left"></i> Back to List</a>
    </form>
</div>
