@model IEnumerable<BulkyWeb.Models.Category>

@{
    ViewData["Title"] = "Index";
}

<div class="container mt-5 animate__animated animate__fadeIn">
    <div class="row">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Categories" asp-action="Create" class="btn btn-primary animate__animated animate__fadeInRight">
                <i class="bi bi-tag"></i> &nbsp; Create New Category
            </a>
        </div>
    </div>
    <br />

    <table class="table table-bordered table-striped animate__animated animate__fadeInUp" style="width:100%">
        <thead class="table-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model.Name)</th>
                <th>@Html.DisplayNameFor(model => model.DisplayOrder)</th>
                <th>Commands</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Name)</td>
                    <td>@Html.DisplayFor(modelItem => item.DisplayOrder)</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary"><i class="bi bi-info-circle"></i> Details</a>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-info"><i class="bi bi-pencil"></i> Edit</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger"><i class="bi bi-trash"></i> Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
